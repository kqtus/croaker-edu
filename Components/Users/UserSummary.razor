@using edu_croaker.Dtos;

@namespace Components

<div class="card">
    <div class="card-body">
        <div class="row justify-content-between">
            <div class="col-auto row">
                <div class="col-auto" style="padding-right: 0px">
                    <img src="@Data?.Avatar" alt="avatar" style="width: 50px; height: 50px" />
                </div>
                <div class="col-auto">
                    <p class="h5">@Data?.DisplayedName</p>
                    <p class="h6 text-muted">@@@Data?.Username</p>
                </div>
            </div>
            
            <div class="col-md-auto">
                <FollowBtnContainer UserId="@Data?.UserId" />
            </div>
        </div>
        
        <hr />
        <p>@Data?.Bio</p>
        <div>
            <a href="/followers/@Data?.Username">
                <strong>@Data?.FollowersCount</strong> followers
            </a>
            <a href="/followers/@Data?.Username">
                <strong>@Data?.FollowedCount</strong> following
            </a>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public PublicUserData Data { get; set; }
}
