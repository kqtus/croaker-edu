@page "/"
@page "/byHashtag/{Hashtag}"
@page "/byUser/{User:int}"

@using Components

<div class="container">
    <AuthorizeView>
        <Authorized>
            <div class="row">
                <div class="col-3">
                    <div class="sticky-side-bar">
                        <Profile />
                    </div>
                </div>
                <div class="col-5">
                    <WriteCroak />
                    <DeleteCroak />
                    @if (@Hashtag != null)
                    {
                        <div class="alert alert-primary" role="alert">
                            Results for <strong>#@Hashtag</strong>
                            <a href="/" class="float-right">Clear</a>
                        </div>
                        <Croaks Hashtag="@Hashtag" />
                    }
                    else
                    {
                        <Croaks />
                    }
                </div>
                <div class="col-3">
                    <div class="sticky-side-bar">
                        <Popular />
                        <div style="margin-top: 5px">
                            <Discover />
                        </div>
                    </div>
                </div>
            </div>
        </Authorized>
        <NotAuthorized>
            <Login/>
        </NotAuthorized>
    </AuthorizeView>
</div>


@code {
    [Parameter]
    public string Hashtag { get; set; }

    [Parameter]
    public int User { get; set; }
}